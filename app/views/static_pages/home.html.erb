<div class="jumbotron">
  <div class="text-center row header page-header">
    <h1>Sales Tracker</h1>
  </div>

  <% if current_user %>
  <div class="row text-center">
    <div class="btn-group">
      <%= render "layouts/employee_subnav" %>
    </div>
  </div>
  <% else %>
  <div class="row text-center">
    <div class="btn-group">
      <%= link_to new_user_session_path do %>
        <button class="btn btn-lg btn-default" type="button" name="button">Log in!</button>
      <% end %>
      <%= link_to new_user_registration_path do %>
        <button class="btn btn-lg btn-default" type="button" name="button">Sign up!</button>
      <% end %>
    </div>
  </div>
  <% end %>
</div>